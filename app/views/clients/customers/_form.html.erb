<%= form_with model: customer, url: url, data: { turbo_frame: 'customer' } do |form| %>
  <% if customer.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row g-0">
    <div class="col-lg-12 pe-lg-2">
      <div class="card mb-3">
        <div class="card-header">
          <h5 class="mb-0">Customer Profile</h5>
        </div>
        <div class="card-body bg-body-tertiary">
          <div class="row">
            <div class="col-12">
              <label class="form-label" for="email1">Email</label>
              <%= form.text_field :email, class: 'form-control' %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6">
              <label class="form-label" for="first-name">First Name</label>
              <%= form.text_field :first_name, class: 'form-control' %>
            </div>

            <div class="col-lg-6">
              <label class="form-label" for="last-name">Last Name</label>
              <%= form.text_field :last_name, class: 'form-control' %>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <%= form.label :phone, 'Phone Number:', class: 'form-label' %>
              <%= form.number_field :phone, class: 'form-control' %>
            </div>
            <div class="col-6">
              <%= form.label :secondary_email, 'Secondary email:', class: 'form-label' %>
              <%= form.text_field :secondary_email, class: 'form-control' %>
            </div>
          </div>
          <h5 class="mt-3">Company Information:</h5>
          <div class="row">
            <div class="col-12">
              <%= form.label :company_name, 'Company Name:', class: 'form-label' %>
              <%= form.text_field :company_name, class: 'form-control' %>
            </div>
            <div class="col-12">
              <%= form.label :address, 'Company Address:', class: 'form-label' %>
              <%= form.text_area :address, class: 'form-control', rows: 3 %>
            </div>
          </div>
          <h5 class="mt-3">Payment Information:</h5>
          <div class="row mb-2">
            <div class="col-6">
              <%= form.label :card_number, 'Card No.:', class: 'form-label' %>
              <%= form.text_field :card_number, class: 'form-control' %>
            </div>
            <div class="col-6">
              <%= form.label :expiry, 'Expiry:', class: 'form-label' %>
              <%= form.text_field :expiry, class: 'form-control' %>
            </div>
          </div>
          <div class="row mb-2">
            <div class="col-6">
              <%= form.label :card_name, 'Name:', class: 'form-label' %>
              <%= form.text_field :card_name, class: 'form-control' %>
            </div>
            <div class="col-6">
              <%= form.label :cvv, 'CVV:', class: 'form-label' %>
              <%= form.text_field :cvv, class: 'form-control' %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-12 d-flex justify-content-end">
              <%= form.submit 'Update', class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
